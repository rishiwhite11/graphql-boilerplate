{
   "name": "graphql-boilerplate",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "devDependencies": {
      "@types/bcrypt": "^3.0.0",
      "@types/jest": "^25.2.1",
      "@types/node": "^13.11.0",
      "gql2ts": "^1.10.1",
      "jest": "^25.2.7",
      "ts-jest": "^25.3.1",
      "ts-node": "8.8.1",
      "typescript": "^3.8.3"
   },
   "dependencies": {
      "bcryptjs": "^2.4.3",
      "graphql-import": "^1.0.1",
      "graphql-request": "^1.8.2",
      "graphql-yoga": "^1.18.3",
      "pg": "^8.0.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.2.24",
      "uuid": "^7.0.3"
   },
   "scripts": {
      "start": "nodemon --exec ts-node --files src/index.ts",
      "test": "jest",
      "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts"
   },
   "jest": {
      "transform": {
        "^.+\\.tsx?$": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
      "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
      ]
   }
}
